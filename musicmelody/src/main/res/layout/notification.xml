<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:clickable="true"
    android:focusable="true"
    android:paddingHorizontal="2dp"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
     <ImageView
         android:id="@+id/iv_notification_music_photo"
         android:layout_width="80dp"
         android:scaleType="fitXY"
         android:layout_height="80dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tv_notification_song_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:textSize="16sp"
                android:text="TV音乐"/>
            <TextView
                android:id="@+id/tv_notification_singer_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/big_red"
                android:layout_marginTop="7dp"
                android:layout_marginLeft="20dp"
                android:text="未知"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:gravity="center"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/iv_notification_pre_song_service"
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:src="@drawable/ic_previous__song"
                        android:background="@drawable/linearlayout_water_selector"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_weight="1"
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/iv_notification_music_play_service"
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:src="@drawable/music_play"
                        android:background="@drawable/linearlayout_water_selector"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_weight="1"
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/iv_notification_next_song_service"
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:src="@drawable/ic_next_song"
                        android:background="@drawable/linearlayout_water_selector"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>